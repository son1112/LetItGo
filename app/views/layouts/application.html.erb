<!DOCTYPE html>
<html>
  <head>
    <title>LetItGo</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

    <div id="content_div">

      <!-- LEFT PANEL -->
      <div id="left">

	<div class="blue right"
	     data-0="opacity:1;"
	     data-200="opacity:0;"
	     >
	  <h1 class="title right">Let it </h1>
	  <strong>
	    <p>River </p>
	    <p>Phoenix </p>
	  </strong>
	</div>

	<h1 id="new-button" 
	    class="pink right"
	    data-0="font-size:60px;"
	    data-2000="font-size:1000px;"
	    >
	  <%= link_to '+', new_entry_path %></h1>
      </div>


      <!-- RIGHT PANEL -->
      <div id="right">
	<div class="left">

	  <h1 id="title-right" class="title left">
	    go!
	  </h1>
	  <div id="sub-title-right">
	    <strong>
	      <p> Hi!</p>
	      <p> Hi!</p>
	    </strong>
	  </div>

	  <div id="skrollr-body">
	    <div id="page">
	      <%= yield %>
	    </div>

	  </div>  
	</div>
      </div>

    </div>


    <!-- SKROLLR -->
    <script>
     (function($){
       skrollr.init({
	 forceHeight: false,
	 smoothScrolling: false
       }).refresh();
     } (jQuery));
    </script>

  </body>
</html>
